generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  email     String       @unique
  name      String
  role      String // Changed from Role enum to String
  createdAt DateTime     @default(now())
  teams     TeamMember[]
  reviews   Review[]
}

model Event {
  id          String       @id @default(cuid())
  title       String
  mode        String
  status      String
  startAt     DateTime
  endAt       DateTime
  createdAt   DateTime     @default(now())
  teams       Team[]
  submissions Submission[]
}

model Team {
  id          String       @id @default(cuid())
  name        String
  sizeLimit   Int          @default(4)
  inviteCode  String       @unique
  event       Event        @relation(fields: [eventId], references: [id])
  eventId     String
  members     TeamMember[]
  submissions Submission[]
}

model TeamMember {
  id     String @id @default(cuid())
  role   String
  team   Team   @relation(fields: [teamId], references: [id])
  teamId String
  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@unique([teamId, userId])
}

model Submission {
  id          String   @id @default(cuid())
  title       String
  repoUrl     String?
  demoUrl     String?
  stage       String
  submittedAt DateTime @default(now())
  team        Team     @relation(fields: [teamId], references: [id])
  teamId      String
  event       Event    @relation(fields: [eventId], references: [id])
  eventId     String
  reviews     Review[]
}

model Review {
  id              String     @id @default(cuid())
  scoreImpact     Int
  scoreInnovation Int
  scoreUx         Int
  scoreTech       Int
  comments        String?
  reviewedAt      DateTime   @default(now())
  submission      Submission @relation(fields: [submissionId], references: [id])
  submissionId    String
  judge           User       @relation(fields: [judgeId], references: [id])
  judgeId         String

  @@unique([submissionId, judgeId])
}

